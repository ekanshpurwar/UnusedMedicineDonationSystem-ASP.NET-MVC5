@model IEnumerable<UMDS_DALlib.Medicine>

@{
    ViewBag.Title = "RequestMedicine";
}

<h2>Medicine Inventory</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpiryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PharmaCompany)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Donor_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonationDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PharmaCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Donor_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationDate)
            </td>
            <td>
                @Html.ActionLink("Add", "AddToCart", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })



                @*@if (Session["errMsg"] != null)
                    {
                        <span>@Session["errMsg"].ToString()</span>

                    }*@
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Go to Bag", "Checkout", null, htmlAttributes: new { @class = "btn btn-danger" })
