@model IEnumerable<UMDS_DALlib.Request>

@{
    ViewBag.Title = "Checkout";
}

@if (ViewData["errMsg"] == null)
{
    <h2>Your Medicine Bag</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicine_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.NGO_Id)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicine_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.NGO_Id)
                    </td>*@
                <td>

                    @Html.ActionLink("Delete", "DeleteFromCart", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    @Html.ActionLink("Submit Request", "NGOSubmitRequest", null, htmlAttributes: new { @class = "btn btn-primary" })
}


else
{
    <h1>@ViewData["errMsg"].ToString()</h1>
    @Html.ActionLink("Back to Inventory", "RequestMedicine", null, htmlAttributes: new { @class = "btn btn-primary" })

    
}
